{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "composite": true,
    "paths": {
      "@uni-boost/*": ["../../packages/*/src"],
      "vitest": ["./vitest.config.d.ts"],
      "vitest/config": ["./vitest.config.d.ts"]
    }
  }
}